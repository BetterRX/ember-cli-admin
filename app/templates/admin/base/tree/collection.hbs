{{#with view.content as |content|}}
    <div class="tree-item_wrap">
      <i class="icon-move icon-move glyphicon glyphicon-move"></i>
      <a class="tree-item_link" href="javascript:void(0);">{{content.name}}</a>
      <div class="controls">
        {{#if controller.itemActions}}
            {{#each controller.itemActions as |action|}}
                {{admin-action
                tagName="button"
                actionName=action
                model=content
                title=action.title
                adminAction='adminAction'
                newAction=controller.newAction
                allActions=controller.allActions}}
            {{/each}}
        {{/if}}
        {{partial "admin/base/actions/addition-actions"}}
      </div>
    </div>
    {{#if content.children}}
      <ol>
        {{#each item in content.children}}
          {{partial 'admin/base/tree/item'}}
        {{/each}}
      </ol>
    {{/if}}
{{/with}}
