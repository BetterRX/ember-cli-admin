{{#each action in additionalActions}}
  {{#view 'admin/base/actions/action' tagName="button" href="#" context=action model=view.item title=action.title}}
    <span {{bind-attr class="action.iconClass"}}></span>
  {{/view}}
{{/each}}

{{#if view.item.additionalActions}}
    {{#each action in view.item.additionalActions}}
        {{#view 'admin/base/actions/action' tagName="button" href="#" context=action model=view.item title=action.title}}
            <span {{bind-attr class="action.iconClass"}}></span>
        {{/view}}
    {{/each}}
{{/if}}
