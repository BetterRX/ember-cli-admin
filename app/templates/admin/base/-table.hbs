<div class="row">
    <div class="col-md-9">
        {{partial "admin/base/actions/batch"}}
        {{partial "admin/base/table-settings"}}
        <table class="table-view">
            {{admin-table-head activeTableAttributes=controller.activeTableAttributes
            sortFields=controller.sortFields orderAscending=controller.orderAscending
            sort=controller.sort action='sort' batches=controller.__batches
            items=controller.model.items
            }}
            <tbody>
                {{#if controller.model.items }}
                    {{each controller.model.items itemViewClass="admin/base/tr-list"}}
                {{else}}
                    {{#if controller.model.items.isLoaded}}
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-exclamation-sign">Empty</span>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-refresh"></span>
                            </td>
                        </tr>
                    {{/if}}
                {{/if}}
            </tbody>
        </table>
    </div>
    {{#if controller.isShowSearchForm}}
        <div class="col-md-3">
            {{outlet 'search'}}
            {{outlet 'sidebar'}}
        </div>
    {{/if}}
</div>
{{partial "admin/base/pagination"}}
